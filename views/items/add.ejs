<html>
	<head>
		<title><%= title %></title>
	</head>
	<body>
		<div>
			<a href="/">Home</a> | 
			<a href="/items/add">Add item</a> | 
			<a href="/items">Items list</a>
		</div>	
		<h1><%= title %></h1>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/items/add" method="post" name="form1">
	<table width="25%" border="0">
		<tr> 
			<td>Name</td>
			<td><input type="text" name="name" id="name" value="<%= name %>" /></td>
		</tr>
		<tr> 
			<td>Quantity</td>
			<td><input type="text" name="qty" value="<%= qty %>" /></td>
		</tr>
		<tr> 
			<td>Amount</td>
			<td><input type="text" name="amount" value="<%= amount %>" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Add" /></td>
		</tr>
	</table>
</form>

	</body>
	</html>
