<%- include ../layouts/header.ejs %>

<body>
    <%- include ../layouts/left-panel.ejs %>
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <%- include ../layouts/header-panel.ejs %>
        <!-- Content -->
        <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">
                <!--  add  -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Novo Or√ßamento</strong>
                            </div>
                            <div class="card-body">
                                <!-- new vehicle-->
                                <div id="add-vehicle">
                                    <div class="card-body">

                                        <!--  MSG ERRORS -->
                                        <% if (messages.error) { %>
                                            <p style="color:red"><%- messages.error %></p>
                                        <% } %>
                                        
                                        <% if (messages.success) { %>
                                            <p style="color:green"><%- messages.success %></p>
                                        <% } %>
                                        <form action="/budget/add" method="post" novalidate="novalidate">
                                            <div class="row">    
                                                <div class="col-3">
                                                    <div class="form-group">
                                                        <label for="license_plate" class="control-label mb-1">Placa</label>
                                                        <select id="license_plate" name="license_plate" class="form-control"></select>
                                                    </div>
                                                </div>
                                                <div class="col-5">
                                                    <div class="form-group">
                                                        <label for="model" class="control-label mb-1">Marca/Modelo</label>
                                                        <input type="text" id="model" name="model" class="form-control" value=""/>
                                                    </div>
                                                </div>
                                                <div class="col-2">
                                                    <div class="form-group">
                                                        <label for="yearModel" class="control-label mb-1">Ano</label>
                                                        <input type="text" id="yearModel" name="yearModel" class="form-control" value="" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"/>
                                                    </div>
                                                </div>
                                                <div class="col-2">
                                                    <div class="form-group">
                                                        <label for="mileage" class="control-label mb-1">KM</label>
                                                        <input type="text" id="mileage" name="mileage" class="form-control" value="" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"/>
                                                    </div>
                                                </div>
                                            </div> 
                                            <div class="row">
                                                <div class="col-3">
                                                    <div class="form-group">
                                                        <label for="customer_registry" class="control-label mb-1">CPF/CNPJ</label>
                                                        <input type="text" id="customer_registry" name="customer_registry" class="form-control" value="" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"/>
                                                    </div>
                                                </div>
                                                <div class="col-5">
                                                    <div class="form-group">
                                                        <label for="customer_name" class="control-label mb-1">Nome Completo</label>
                                                        <input type="text" id="customer_name" name="customer_name" class="form-control" value=""/>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label for="customer_mail" class="control-label mb-1">Email</label>
                                                        <div class="input-group">
                                                            <input type="email" id="customer_mail" name="customer_mail" placeholder="Email" class="form-control" value="">
                                                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                                        </div>
                                                    </div>
                                                </div>        
                                            </div>
                                            <br><br>
                                            <div class="row justify-content-end">
                                                <div class="col-2">
                                                    <div class="form-group">
                                                        <button type="button" id="addItem" name="addItem" class="btn btn-outline-primary btn-lg btn-block">Adicionar item</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <table class="table ">
                                                        <thead>
                                                            <tr>
                                                                <th>ITEM</th>
                                                                <th>QTD</th>
                                                                <th>VALOR</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <!--ROWS-->
                                                            <template id="itemrow">
                                                                <tr>
                                                                    <td width="70%">
                                                                        <div class="form-group">
                                                                            <input type="text" id="item" name="item" class="form-control" value=""/>
                                                                        </div>
                                                                    </td>
                                                                    <td width="9%">
                                                                        <div class="form-group">
                                                                            <input type="text" id="qtd" name="qtd" class="form-control" value="" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"/>
                                                                        </div>
                                                                    </td>     
                                                                    <td width="20%">
                                                                        <div class="form-group">
                                                                            <input type="text" id="price" name="price" class="form-control money" value=""/>
                                                                        </div>
                                                                    </td>
                                                                    <td width="1%">
                                                                        <a href="#" class="fa fa-times remove"></a>
                                                                    </td>   
                                                                </tr>
                                                            </template>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <br><br>
                                            <div class="row row justify-content-end">
                                                <div class="col-2">
                                                    <div class="form-group">
                                                        <label for="total" class="control-label mb-1">Total</label>
                                                        <input type="text" id="total" name="total" readonly class="form-control money" value=""/>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- .card -->
                    </div>
                </div>
                <!--  /add -->
                <div class="clearfix"></div>
            <!-- .animated -->
        </div>
        <!-- /.content -->
        <div class="clearfix"></div>
        <!-- Footer Copyright -->
        <%- include ../layouts/footer-copyright.ejs %>
        <!-- /.site-footer -->
    </div>
    <!-- /#right-panel -->
    </div>
    <!--JS FOR INIT SELECT2-->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/init/select2-init.js"></script>
    <script src="/js/init/budget.js"></script>
    <script src="/js/lib/select2.min.js"></script>
    <script src="/js/lib/jquery.maskMoney.min.js"></script>
    <script src="/js/lib/numeral.min.js"></script>

<%- include ../layouts/footer.ejs %>
